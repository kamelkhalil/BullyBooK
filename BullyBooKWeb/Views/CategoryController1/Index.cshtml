@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CategoryController1" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

<div class="table-responsive">
    <table class="table table-striped table-bordered" style="text-align:center" width="75%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.displayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="CategoryController1" asp-action="Edit" asp-route-id="@obj.Id"
                                class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-controller="CategoryController1" asp-action="Delete" asp-route-id="@obj.Id"
                                   class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>